    <record id="top_most_sale_filter_invoice_prod_report_bysalesteam" model="ir.filters">
        <field name="name">By Sales Team</field>
        <field name="model_id">top.most.sale.invoice.product.report</field>
        <field name="domain">[]</field>
        <field name="user_id" eval="False"/>
        <field name="context">{'group_by': ['date:month', 'team_id']}</field>
    </record>
    <record id="top_most_sale_filter_invoice_prod_product" model="ir.filters">
        <field name="name">By Product</field>
        <field name="model_id">top.most.sale.invoice.product.report</field>
        <field name="domain">[]</field>
        <field name="user_id" eval="False"/>
        <field name="context">{'group_by': ['date:month', 'product_id'], 'set_visible':True, 'residual_invisible':True}</field>
    </record>
    <record id="top_most_sale_filter_invoice_prod_category" model="ir.filters">
        <field name="name">By Product Category</field>
        <field name="model_id">top.most.sale.invoice.product.report</field>
        <field name="domain">[]</field>
        <field name="user_id" eval="False"/>
        <field name="context">{'group_by': ['date:month', 'categ_id'], 'residual_invisible':True}</field>
    </record>
    <record id="top_most_sale_filter_invoice_prod_refund" model="ir.filters">
        <field name="name">By Credit Note</field>
        <field name="model_id">top.most.sale.invoice.product.report</field>
        <field name="domain">[('type', '=', 'out_refund')]</field>
        <field name="user_id" eval="False"/>
        <field name="context">{'group_by': ['date:month', 'user_id']}</field>
    </record>
    <record id="top_most_sale_filter_invoice_prod_country" model="ir.filters">
